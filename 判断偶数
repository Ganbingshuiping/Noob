#include <stdio.h>
#define N 5
int e_num(int arr[N])//定义识别偶数函数 
{
    int count=0,sum=0;
    for(int i=0;i<N;i++)
    {
        if(arr[i]%2==0) //识别偶数 
     {
        sum+=arr[i];
        count++;
     }
    }
	arr[0]=sum;
	arr[1]=count; 
}
int main()
{
    int arr[N]={0};
    for(int *p=arr,i=0;i<N;i++,p++)
    {
        scanf("%d",p);//通过指针运算不断输入 
    }
	e_num(arr);
    printf("偶数的个数为%d\t偶数的和为%d",arr[1],arr[0]);//输入函数变化产生的值 
    return 0;
}
